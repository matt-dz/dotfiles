alias prisma="npx prisma"
alias reload="source ~/.config/zsh/.zshrc"
alias k=kubectl

vim_alias () {
	if command -v nvim >/dev/null 2>&1; then
		alias vim='nvim'
	fi
}

eza_alias () {
	if command -v eza >/dev/null 2>&1; then
		alias ls='eza --icons=always --color=always -s type'
		alias l='eza --icons=always --color=always -s type -a -l'
		alias lt='eza --icons=always --color=always -s type --tree --level 2'
		alias lg='eza --icons=always --color=always -s type -a -l --git-ignore'
  fi
}

bat_alias () {
	if command -v bat >/dev/null 2>&1; then
		alias cat='bat'
	fi
}

cd_alias () {
	if typeset -f __zxoide_z >/dev/null 2>&1; then
    alias cd='zoxide'
  fi
}

eza_alias
bat_alias
vim_alias
cd_alias
